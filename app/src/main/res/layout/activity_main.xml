<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/index">
    <Button
            android:layout_width="130dp"
            android:layout_height="159dp"
            android:id="@+id/btnNutrition" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.706"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorControlHighlight" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:id="@+id/btnHealth"
            app:layout_constraintStart_toEndOf="@+id/btnNutrition" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" android:layout_marginTop="400dp"
            app:layout_constraintTop_toTopOf="parent" android:background="?attr/actionBarDivider"
            app:layout_constraintEnd_toStartOf="@+id/btnWork" android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:id="@+id/btnWork" app:layout_constraintStart_toEndOf="@+id/btnHealth" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" android:background="?attr/actionBarDivider"
            android:layout_marginTop="400dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:id="@+id/btnTips" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnNutrition" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:background="?attr/actionBarDivider"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnHealth" app:layout_constraintStart_toEndOf="@+id/btnTips"
            android:layout_marginLeft="4dp" android:layout_marginStart="4dp"
            android:background="?attr/actionBarDivider" app:layout_constraintEnd_toStartOf="@+id/btnApp"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp" android:id="@+id/btnTele"/>
    <Button
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:id="@+id/btnApp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnWork"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginRight="1dp"
            android:background="?attr/actionBarDivider"/>
</android.support.constraint.ConstraintLayout>